<div class="span6 offset2">
	<div class="row-fluid">
		<div class="hero-unit full-admin-green poster">
			<h2> Resend confirmation instructions </h2>
			<hr>

			<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
				<%= devise_error_messages! %>
				<div class="offset3">
					<%= f.email_field :email, :autofocus => true, :placeholder=>"email" %>
				</div>

				<%= submit_tag "Resend confirmation instruction", :class => "btn-inverse btn-large offset2" %>
			<% end %>

			<%= render "admin/shared/links" %>

		</div>
	</div>
</div>