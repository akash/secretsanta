<div class="row-fluid">
	<h1>Welcome</h1>
	<h3 class="muted">You're just 4 simple steps away from starting your Party...</h3>

	<%= render :partial => 'admin/shared/guide', :locals => {:box1_class => "full-admin-green", :box2_class => "full-admin-muted", :box3_class => "full-admin-muted", :box4_class => "full-admin-muted"} %>

	<div class="span12">
		<div class="hero-unit poster full-admin-green">
			<% if @parties.empty? %>
				<p>You haven't created any parties yet.</p>
			<% else %>
				<h1 class="offset4">Your Parties</h1>
				<hr>
				<table>
					<thead><th></th><th></th></thead>
					<% @parties.each do |party| %>
						<tr>
							<td><%= link_to party.name, admin_party_path(party), :class => "main-link" %></td>

							<td>
								<% if party.launched? %>
									<%= form_tag admin_party_reset_path(party) do %>
										<%= submit_tag "Reset Party", :class => "btn btn-danger btn-large offset4", :onclick => "return SecretSantaInvites.setUpPartyReset()" %>
									<% end %>
								<% else %>
									<%= form_tag admin_party_launch_path(party) do %>
										<%= submit_tag "Launch Party", :class => "btn btn-inverse btn-large offset4" %>
									<% end %>
								<% end %>
							</td>
						</tr>
					<% end %>
				</table>
			<% end %>
			<a href="<%= new_admin_party_path %>" class="btn btn-inverse btn-large"><i class="icon-plus-sign icon-in-button"></i> create new</a>
		</div>
	</div>
</div>

<%=	 javascript "invitations.js" %>