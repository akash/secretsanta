<input type=hidden id="party-id" value="<%=	@party_id %>"/>
<input type=hidden id="user-id" value="<%=	@user.id %>"/>
<div class="row-fluid">
	<h1>Exclusions</h1>
	<h3 class="muted">decide which people, if any, this person cannot select</h3>

	<%= render :partial => 'admin/shared/guide', :locals => {:box1_class => "full-admin-muted", :box2_class => "full-admin-green", :box3_class => "full-admin-muted"} %>
		<div class="hero-unit full-admin-green span8 offset2">
			<%= form_tag(create_exclusions_admin_user_path(@user), :class => "form-horizontal") do %>
				<% @users.each do |user| %>
					<div class="control-group">
						<div class="control-label span3 offset3">
							<%=	label_tag "user[exclusions][#{user.id}]", user.full_name, :class => "checkbox" %>
						</div>
						<div class="control span3 offset1">
							<%=	check_box_tag "user[exclusions][#{user.id}]", user.id, @user.exclusions.any?{|e| e.excluded_user_id == user.id} %>
						</div>
					</div>
				<% end %>
				<div class="control-group offset3">
						<%= submit_tag "Update Exclusions", :class => "btn btn-inverse btn-large" %>
				</div>
			<% end %>
		</div>
</div>